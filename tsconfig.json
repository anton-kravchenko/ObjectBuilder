{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "esModuleInterop": true
  },
  "include": ["src", "tests/type-check-test"]
}
